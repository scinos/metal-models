{
  "$schema": "https://json.schemastore.org/tsconfig",

  "compilerOptions": {
    // composite not suported by vue-tsc
    "composite": false,
    "disableReferencedProjectLoad": true,

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "importHelpers": true,
    "noEmitHelpers": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",

    "strict": true,
    "isolatedModules": true,

    "moduleResolution": "node",
    "types": [],
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./src/**/*",
    "./src/.vuepress/**/*"
  ]
}